<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="responsivecars.client_list">
      <field name="name">Clients list</field>
      <field name="model">responsivecars.client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="phone_number"/>
          <field name="cars_ids"/>  
          <field name='country_id'/>       
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="responsivecars.client_action_window">
      <field name="name">Client window</field>
      <field name="res_model">responsivecars.client</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menu categories -->
    <menuitem name="Clients" id="responsivecars.client_menu_1" parent="responsivecars.menu_root"/>

    <!-- actions -->
    <menuitem name="Clients List" id="responsivecars.client_menu_1_list" parent="responsivecars.client_menu_1" action="responsivecars.client_action_window"/>
  </data>
</odoo>
